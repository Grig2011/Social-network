@model DevNet.Models.Post
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<form asp-action="Add" asp-controller="Post" method="post" enctype="multipart/form-data">
	<label asp-for="image" for="Image">Image URL:</label>
	<input asp-for="image" type="file" id="Image" name="Image" />
	<br />
	<label asp-for="Title">Title:</label>
	<input asp-for="Title" type="text" />
	<br />
	<label asp-for="Content">Content:</label>
	<textarea asp-for="Content"></textarea>
	<br />
	<button type="submit">Add Post</button>
</form>